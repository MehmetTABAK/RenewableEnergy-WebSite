@using Renewable_Energy_Entities
@using Renewable_Energy_Entities.DTOs
@model List<BlogCategoryDTO>

<!-- ======================
          Blog Grid
        ========================= -->
<section class="post-grid pb-60">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-6 offset-lg-3">
                <div class="heading text-center mb-50">
                    <h3 class="heading__title">
                        Bazı Bloglar
                    </h3>
                </div><!-- /.heading -->
            </div><!-- /.col-lg-6 -->
        </div><!-- /.row -->
        <div class="row">
            <!-- Post Item #1 -->
            @foreach(var blog in Model)
            {
                <div class="col-sm-12 col-md-6 col-lg-4">
                    <div class="post-item">
                        <div class="post__img">
                            <a href="@Url.Action("BlogDetails","Blog", new{id=blog.Id})">
                                <img src="@blog.ImageUrl" alt="post image" loading="lazy">
                            </a>
                            <span class="post__date">
                                @blog.Time
                            </span>
                        </div><!-- /.post-img -->
                        <div class="post__body">
                            <div class="post__meta d-flex align-items-center">
                                <div class="post__cat">
                                    <a href="#">
                                        @blog.CategoryName
                                    </a>
                                </div><!-- /.post-meta-cat -->
                                <a class="post__author" href="#">@blog.Writer</a>
                            </div><!-- /.post-meta -->
                            <h4 class="post__title">
                                <a href="#">
                                    @blog.Title
                                </a>
                            </h4>
                            <p class="post__desc">
                                @blog.Body
                            </p>
                            <a href="@Url.Action("BlogDetails","Blog", new{id=blog.Id})" class="btn btn__secondary btn__outlined btn__custom">
                                <i class="icon-arrow-right"></i>
                                <span>
                                    Devamını oku
                                </span>
                            </a>
                        </div><!-- /.post-content -->
                    </div><!-- /.post-item -->
                </div>

                <!-- /.col-lg-4 -->
            }
        </div><!-- /.row -->
    </div><!-- /.container -->
</section><!-- /.blog Grid -->