@using Renewable_Energy_Entities.DTOs
@model List<BlogCategoryDTO>

@{
    Layout = "_AdminLayout";
}

<form class="form-group" method="post">
    <div class="table-responsive">
        <table class="table table-striped">
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Body</th>
                <th>ImageUrl</th>
                <th>Time</th>
                <th>Writer</th>
                <th>CategoryName</th>
                <th>Düzenle</th>
                <th>Sil</th>
            </tr>
            <tbody>
                @foreach (var blog in Model)
                {
                    <tr>
                        <td>@blog.Id</td>
                        <td>@blog.Title</td>
                        <td>@blog.Body</td>
                        <td><img style="width:90px; height:70px;" src="@blog.ImageUrl"></td>
                        <td>@blog.Time.ToShortDateString()</td>
                        <td>@blog.Writer</td>
                        <td>@blog.CategoryName</td>
                        <th><a class="btn btn-primary" href="@Url.Action("BlogUpdate","Admin",new{id=blog.Id})">Düzenle</a></th>
                        <th><a class="btn btn-warning" href="@Url.Action("BlogDelete","Admin",new{id=blog.Id})">Sil</a></th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>